<?xml version="1.0"?>
<zend-config xmlns:zf="http://framework.zend.com/xml/zend-config-xml/1.0/">
    <plugin>
        <!-- the plugin name [A-Za-z_] -->
        <pluginName>ExamplePlugin</pluginName>

        <!-- a short description -->
        <pluginDescription><![CDATA[]]></pluginDescription>

        <!-- meta data -->
        <pluginVersion>1.0</pluginVersion>
        <pluginRevision>1</pluginRevision>
        <pluginBuildTimestamp>0</pluginBuildTimestamp>

        <!-- put in the URL for the plugin configuration eg. /plugin/Example/admin/index -->
        <pluginIframeSrc />

        <!-- className of the plugin which extends Pimcore_API_Plugin_Abstract-->
        <pluginClassName>ExamplePlugin_Plugin</pluginClassName>

        <!-- include paths relative to plugin-directory -->
        <pluginIncludePaths>
            <path>/ExamplePlugin/lib</path>
        </pluginIncludePaths>

        <!-- namespaces to register with autoloader-->
        <pluginNamespaces>
            <namespace>ExamplePlugin</namespace>
        </pluginNamespaces>

        <!-- js files with path relative to plugin-directory -->
        <pluginJsPaths>
            <path>/plugins/Example/static/js/startup.js</path>
        </pluginJsPaths>

        <!-- css files with path relative to plugin-directory -->
        <pluginCssPaths>
            <path>/plugins/Example/static/css/example.css</path>
        </pluginCssPaths>
    </plugin>
</zend-config>
